<script>
  const section = document.getElementById("laptop");
  const ls = ["laptop", "desktop", "accessory"];
  document.getElementById("laptopHead").style.backgroundColor = "rgba(0,0,0,0.4)"

  for (let i = 0; i < ls.length; i++) {
    if (ls[i] != "laptop") {
      const hide = document.getElementById(ls[i]);
      hide.style.height = "0";
      hide.style.opacity = "0";
    }
  }

  function get(params) {
    params.style.backgroundColor = "rgba(0,0,0,0.4)";
    const node = params.innerText.toLowerCase();
    const section = document.getElementById(node);

    setTimeout(() => {
      section.style.opacity = "1";
      section.style.height = "fit-content";

      for (let i = 0; i < ls.length; i++) {
        if (ls[i] != node) {
          const hide = document.getElementById(ls[i]);
          hide.style.height = "0";
          hide.style.opacity = "0";
          document.getElementById(`${ls[i]}Head`).style.backgroundColor = "transparent";
        }
      }
    }, 350);
  }
</script>
